.col-sm-12.col-sm-offset-3
  %h2.text-center
    %span.label.label-warning
      Listing categories
  %br
  %table.table.table-striped
    %tr
      %th Name
      %th Total products
      %th
      %th

    - categories.each do |category|
      %tr
        %td= link_to category.name, category
        %td= category.products.count
        %td= link_to 'Edit', edit_category_path(category)
        %td= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }

  %br

  = link_to 'New Category', new_category_path, class: 'btn btn-warning'
  = link_to 'Back', root_url, class: 'btn btn-info'
