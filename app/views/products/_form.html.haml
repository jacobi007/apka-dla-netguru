= form_for [category, product], class: 'form-horizontal', role: "form" do |f|
  - if product.errors.any?
    #error_explanation
      %h2= "#{pluralize(product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - product.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :title, class: "col-sm-3 control-label"
    = f.text_field :title, size: 36
  .form-group
    = f.label :description, class: "col-sm-3 control-label"
    = f.text_area :description, cols: 35, rows: 5
  .form-group
    = f.label :price, class: "col-sm-3 control-label"
    = f.text_field :price, size: 36
  .form-group
    = f.submit 'Save', class: 'btn btn-defualt'
