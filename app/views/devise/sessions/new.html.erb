<div class="col-sm-10 col-sm-offset-4">
  <div class="panel panel-primary">
    <div class="panel-heading">
      Sign in
    </div>
    <div class="panel-body">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, :input_html => {:maxlength => 20, :size => 50} %>
          <%= f.input :password, required: false, :input_html => {:maxlength => 20, :size => 50} %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign in", class: "btn btn-primary" %>
          <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-info" %>
          or maybe...
          <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
        </div>
      <% end %>
    </div>
  </div>
  <%= link_to "Take me back!", root_url, class: "btn btn-default" %>
</div>
