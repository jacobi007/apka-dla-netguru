<div class="col-sm-10 col-sm-offset-4">
  <div class="panel panel-primary">
    <div class="panel-heading">
      Sign up
    </div>
    <div class="panel-body">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, autofocus: true, :input_html => {:maxlength => 20, :size => 50} %>
          <%= f.input :firstname, :input_html => {:maxlength => 20, :size => 50} %>
          <%= f.input :lastname, :input_html => {:maxlength => 20, :size => 50} %>
          <%= f.input :password, :input_html => {:maxlength => 20, :size => 50} %>
          <%= f.input :password_confirmation, :input_html => {:maxlength => 20, :size => 50} %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
          <%= link_to "Sign in", new_session_path(resource_name), class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
  <%= link_to "Take me back!", root_url, class: "btn btn-default" %>
</div>
